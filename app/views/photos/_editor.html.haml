      .btn-group.btn-group-crop
        %button.btn.btn-primary{"data-method" => "getCroppedCanvas", "data-option" => "{ \"width\": 160, \"height\": 90 }", :type => "button"}
          %span.docs-tooltip{"data-original-title" => "$().cropper(\"getCroppedCanvas\", { width: 160, height: 90 })", "data-toggle" => "tooltip", :title => ""}
