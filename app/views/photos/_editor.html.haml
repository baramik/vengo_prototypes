.container
  .row
    .col-md-9
      .img-container
        %img.cropper-hidden{:alt => "Picture", :src => "/assets/example-img.png"}/
    .col-md-3
      %h3 Preview:
      .docs-preview.clearfix
        .img-preview.preview-lg{:style => "width: 263px; height: 147.937px;"}
          %img{:src => "/assets/example-img.png", :style => "display: block; width: 263px; height: 147.938px; min-width: 0px !important; min-height: 0px !important; max-width: none !important; max-height: none !important; margin-left: 0px; margin-top: -2.20369e-14px; transform: none;"}/
        .img-preview.preview-md{:style => "width: 138.667px; height: 78px;"}
          %img{:src => "/assets/example-img.png", :style => "display: block; width: 138.667px; height: 78px; min-width: 0px !important; min-height: 0px !important; max-width: none !important; max-height: none !important; margin-left: 0px; margin-top: -1.16189e-14px; transform: none;"}/
        .img-preview.preview-sm{:style => "width: 69px; height: 38.8125px;"}
          %img{:src => "/assets/example-img.png", :style => "display: block; width: 69px; height: 38.8125px; min-width: 0px !important; min-height: 0px !important; max-width: none !important; max-height: none !important; margin-left: 0px; margin-top: -5.78154e-15px; transform: none;"}/
        .img-preview.preview-xs{:style => "width: 35px; height: 19.6875px;"}
          %img{:src => "/assets/example-img.png", :style => "display: block; width: 35px; height: 19.6875px; min-width: 0px !important; min-height: 0px !important; max-width: none !important; max-height: none !important; margin-left: 0px; margin-top: -2.93266e-15px; transform: none;"}/
      %h3 Data:
      .docs-data
        .input-group.input-group-sm
          %label.input-group-addon{:for => "dataX"} X
          %input#dataX.form-control{:placeholder => "x", :type => "text"}/
          %span.input-group-addon px
        .input-group.input-group-sm
          %label.input-group-addon{:for => "dataY"} Y
          %input#dataY.form-control{:placeholder => "y", :type => "text"}/
          %span.input-group-addon px
        .input-group.input-group-sm
          %label.input-group-addon{:for => "dataWidth"} Width
          %input#dataWidth.form-control{:placeholder => "width", :type => "text"}/
          %span.input-group-addon px
        .input-group.input-group-sm
          %label.input-group-addon{:for => "dataHeight"} Height
          %input#dataHeight.form-control{:placeholder => "height", :type => "text"}/
          %span.input-group-addon px
        .input-group.input-group-sm
          %label.input-group-addon{:for => "dataRotate"} Rotate
          %input#dataRotate.form-control{:placeholder => "rotate", :type => "text"}/
          %span.input-group-addon deg
        .input-group.input-group-sm
          %label.input-group-addon{:for => "dataScaleX"} ScaleX
          %input#dataScaleX.form-control{:placeholder => "scaleX", :type => "text"}/
        .input-group.input-group-sm
          %label.input-group-addon{:for => "dataScaleY"} ScaleY
          %input#dataScaleY.form-control{:placeholder => "scaleY", :type => "text"}/
